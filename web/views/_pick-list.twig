<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 pick">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{title}}</h3>
    </div>
    <div class="panel-body">
      {% for restaurant in picks %}
        <p class="restaurant"><strong>{{restaurant.name}}</strong> {{restaurant.address}}, {{restaurant.phone}}, <a target="_blank" href="http://{{restaurant.website}}">{{restaurant.website}}</a></p>
        <p class="chatter"><em>"{{restaurant.chatter}}"</em></p>
      {% endfor %}
    </div>
  </div>
</div>
