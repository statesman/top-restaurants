{% extends "base.twig" %}

{% block superheader %}

  <div id="slider" class="clearfix">

    <div class="clearfix">
      <img src="assets/cover/lenoir3.jpg" class="col-xs-2 slider-item" />
      <img src="assets/cover/uchi6.jpg" class="col-xs-2 slider-item" />
      <img src="assets/cover/barley2.jpg" class="col-xs-2 slider-item" />
      <img src="assets/cover/qui2.jpg" class="col-xs-2 slider-item" />
      <img src="assets/cover/congress2.jpg" class="col-xs-2 slider-item" />
      <img src="assets/cover/foreign2.jpg" class="col-xs-2 slider-item" />
