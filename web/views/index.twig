{% block content %}

  <div class="row">

    <div class="col-xs-12 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          Map, filters, etc.
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-8">

      <ol>

      {% for restaurant in data %}

        <li>
          <a href="{{loop.index0}}"><h3>{{restaurant.name}}</h3></a>
          <p>{{restaurant.address}}</p>
        </li>

      {% endfor %}

      </ol>

    </div>

  </div>

{% endblock %}
